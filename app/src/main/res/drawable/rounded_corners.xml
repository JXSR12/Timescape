<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:gravity="fill">
        <shape android:shape="rectangle" >
            <solid android:color="#2DFFFFFF" />  <!-- semi-transparent black -->
            <corners android:radius="20dp" />  <!-- rounded corners -->
        </shape>
    </item>

    <item android:gravity="center" android:top="50dp" android:bottom="50dp" android:left="50dp" android:right="50dp">
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/transparent" />  <!-- transparent color -->
            <corners android:radius="20dp" />  <!-- rounded corners -->
        </shape>
    </item>

</layer-list>
