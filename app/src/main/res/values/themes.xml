<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Timescape" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_def1</item>
        <item name="colorPrimaryVariant">#F3BD94</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_acc0</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">#292929</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_def1</item>
        <item name="colorPrimaryVariant">@color/orange_def2</item>
        <item name="colorOnPrimary">#434343</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_acc0</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">#505050</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FullScreenTheme2" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_def1</item>
        <item name="colorPrimaryVariant">@color/orange_def2</item>
        <item name="colorOnPrimary">#434343</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_acc0</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">#505050</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Timescape.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Timescape.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Timescape.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>